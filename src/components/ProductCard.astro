---
interface Product {
  name: string;
  slug: string;
  brand: string;
  price?: number;
  image: string;
}

const { product } = Astro.props as { product: Product };

const price = Number(product?.price ?? 0);
---

<a
  href={`/kola/${product.slug}`}
  class="group block bg-white rounded-2xl border hover:shadow-lg transition overflow-hidden"
>
  <!-- IMAGE -->
  <div class="h-72 flex items-center justify-center bg-neutral-50 p-6">
    <img
      src={product.image}
      alt={product.name}
      class="max-h-full max-w-full object-contain transition duration-300 group-hover:scale-105"
      loading="lazy"
    />
  </div>

  <!-- CONTENT -->
  <div class="p-6">
    <h3 class="text-lg font-medium tracking-tight">
      {product.name}
    </h3>

    <p class="text-sm text-neutral-500 mt-1">
      {product.brand}
    </p>

    <p class="text-lg font-semibold mt-4">
      {price > 0 ? price.toLocaleString("cs-CZ") + " Kƒç" : "Cena na dotaz"}
    </p>
  </div>
</a>
