---
import BaseLayout from "../layouts/BaseLayout.astro";
import { products } from "../data/products";

const categories = [...new Set(products.map((p) => p.category))];
---

<BaseLayout title="DomÅ¯">
  <!-- CATEGORY NAVIGATION -->
  <section class="max-w-6xl mx-auto">
    <h2 class="text-3xl font-semibold mb-12 text-center">Kategorie kol</h2>

    <div class="grid md:grid-cols-3 gap-10">
      {
        categories.map((category) => (
          <a
            href={`/kola/kategorie/${category.toLowerCase()}`}
            class="group relative overflow-hidden rounded-2xl border hover:shadow-xl transition"
          >
            <div class="p-16 text-center bg-neutral-50 group-hover:bg-black transition">
              <h3 class="text-2xl font-semibold capitalize group-hover:text-white transition">
                {category}
              </h3>

              <p class="mt-4 text-neutral-500 group-hover:text-neutral-300 transition">
                Prozkoumat kolekci
              </p>
            </div>
          </a>
        ))
      }
    </div>
  </section>
</BaseLayout>
